<h2>Edit <%= resource_name.to_s.humanize %></h2>
<div class="top">
  <h1 align="center">Sửa Thông Tin Cá Nhân </h1>
  <div class="row justify-content-center border-crudtour">
    <div class="col-md-6 col-md-offset-3l">
      <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
        <%= devise_error_messages! %>
        <div class="form-group">
          <%= f.label :name, 'Tên' %><br />
          <%= f.text_field :name, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :email %><br/>
          <%= f.email_field :email, autofocus: true, class: "form-control" %>
        </div>
        <div class="form-group">
          <%= f.label :phone, 'Số điện thoại' %><br/>
          <%= f.text_field :phone, autofocus: true, class: "form-control" %>
        </div>
       
        <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
          <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
        <% end %>
         <div class="form-group">
          <%= f.label :password, 'Mật khẩu' %> <i>(để trống nếu bạn không muốn thay đổi nó)</i><br />
          <%= f.password_field :password, autocomplete: "off", class: "form-control" %>
        </div>
       
        <div class="form-group">
          <%= f.label :password_confirmation, 'Xác nhận mật khẩu' %><br />
          <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control" %>
        </div>
       
        <div class="form-group">
          <%= f.label :current_password, 'Mật khẩu hiện tại' %><br />
          <%= f.password_field :current_password, autocomplete: "off", class: "form-control" %><br>
        </div>
       
        <div class="actions">
          <%= f.submit "Cập Nhật", class: "btn btn-primary" %>
        </div><br>
      <% end %>
      <div class="actions">
        <%= link_to "Trở về", :back, class: "btn btn-primary" %>
      </div>
    </div>
  </div>
</div><br>
