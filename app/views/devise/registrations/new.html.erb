<div class="vh-100 backgroudimg top">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100 login_section">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5">

            <h2 class="text-center">Đăng Ký</h2>
            <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="field">
                <%= f.label :name,'Tên', class: "form-label" %><br/>
                <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
              </div>

              <div class="field">
                <%= f.label :email, class: "form-label" %><br/>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>

              <div class="field">
                <%= f.label :phone,'Số điện thoại', class: "form-label" %><br/>
                <%= f.text_field :phone, autofocus: true, autocomplete: "phone", class: "form-control" %>
              </div>

              <div class="field">
                <%= f.label :password,'Mật khẩu', class: "form-label" %>
                <% if @minimum_password_length %>
                <em>(<%= @minimum_password_length %> kí tự tối thiểu)</em>
                <% end %><br />
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
              </div>

              <div class="field mb-3">
                <%= f.label :password_confirmation,'Xác nhận mật khẩu', class: "form-label" %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
              </div>

              <div class="actions">
                <%= f.submit "Đăng ký", class:'btn btn-primary' %>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
