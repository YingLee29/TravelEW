<div class="vh-100 backgroudimg top">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-12 col-md-8 col-lg-6 col-xl-5">
        <div class="card shadow-2-strong" style="border-radius: 1rem;">
          <div class="card-body p-5 ">

              <h2 class="text-center">Đăng Nhập</h2>
            <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
              <div class="mb-3">
                <%= f.label :email, class: "form-label" %><br/>
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>
              <div class="mb-3">
                <%= f.label :password,'Mật khẩu',  class: "form-label" %><br />
                <%= f.password_field :password, autocomplete: "current-password", class: "form-control" %>
              </div>

              <% if devise_mapping.rememberable? %>
                <div class="field mb-3 text-center" >
                  <%= f.check_box :remember_me %>
                  <%= f.label :remember_me, 'Lưu đăng nhập'%>
                </div>
              <% end %>

              <div class="actions mb-3 text-center">
                <%= f.submit "Đăng nhập", class: "btn btn-primary" %>
              </div>
            <% end %>
            <%= render "devise/shared/links" %>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
