<% @reviews.each do |review| %>
	<div>
		<span style="color: #2980b9;"><%= review.user.name %>: </span> 
		<%= review.comment %><br>
		<%= link_to 'edit', edit_tour_review_path(id: review.id, tour_id: review.tour) %> 
		<% if current_user%>
			<% if current_user.admin?%>
				<%= link_to 'delete', tour_review_path(id: review.id, tour_id: review.tour), data: {confirm: "xóa bình luận này?"}, method: :delete %>
			<% end -%>
		<% end -%>
	</div>
<% end %>
